{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@c/*": ["src/components/*"],
      "@l/*": ["src/layouts/*"],
      "@s/*": ["src/style/*"],
      "@ss/*": ["src/style-current/*"],
      "@c-base/*": ["src/components/base/*"],
      "@img/*": ["src/assets/img/*"],
      "@data/*": ["src/data/*"],
    }
  }
}

---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
  imagePath: string;
  altText?: string;
}

const { imagePath, altText = 'test alt text' } = Astro.props;
const images = import.meta.glob<{ default: ImageMetadata }>(
  'src/assets/img/**/*.{jpeg,jpg,png,gif,svg}'
);
const imgPath = '/src/assets/img/' + imagePath;

if (!images[imgPath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif,svg}"`
  );
---

<div class='w--img'>
  <Image src={images[imgPath]()} alt={altText} />
</div>
